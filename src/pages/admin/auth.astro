---
// Token-based authentication
import BaseLayout from '../../layouts/BaseLayout.astro';
import { prisma } from '../../lib/db';
import bcrypt from 'bcryptjs';
import { generateToken, saveToken } from '../../lib/tokens';
import { createSession, setSessionCookie } from '../../lib/auth';

let errorMessage = '';
let emailValue = '';

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email')?.toString() || '';
    const password = formData.get('password')?.toString() || '';
    
    emailValue = email; // Preserve email for form
    
    console.log('üîê Login attempt for:', email);
    
    // Validate inputs
    if (!email || !password) {
      errorMessage = 'Please enter both email and password';
    } else {
      // Find user in database
      const user = await prisma.user.findUnique({
        where: { email },
      });
      
      console.log('üë§ User found:', user ? 'Yes' : 'No');
      
      if (!user) {
        errorMessage = 'Invalid email or password';
        console.log('‚ùå User not found');
      } else {
        // Verify password
        const isValidPassword = await bcrypt.compare(password, user.password);
        console.log('üîë Password valid:', isValidPassword);
        
        if (!isValidPassword) {
          errorMessage = 'Invalid email or password';
          console.log('‚ùå Password incorrect');
        } else {
          // Generate token and save to database
          const authToken = generateToken();
          const expiresAt = new Date(Date.now() + 60 * 60 * 24 * 1000); // 24 hours
          await saveToken(authToken, user.id, expiresAt);
          
          // Also create cookie-based session for edit pages
          const sessionId = await createSession(user.id);
          setSessionCookie(Astro.cookies, sessionId);
          
          console.log('‚úÖ Login successful, token and cookie created');
          
          // Redirect to dashboard with token
          return Astro.redirect(`/admin/dashboard?token=${authToken}`);
        }
      }
    }
  } catch (error) {
    console.error('‚ùå Login error:', error);
    errorMessage = 'An error occurred during login. Please try again.';
  }
}
---

<BaseLayout title="Admin Login" description="Login to the admin panel">
  <section class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-slate-800 mb-2">
          Admin Login (Token)
        </h1>
        <p class="text-slate-600">
          Sign in to manage your content
        </p>
      </div>
      
      <div class="card p-8">
        {errorMessage && (
          <div class="mb-4 p-3 bg-red-50 border border-red-200 text-red-800 rounded-lg text-sm flex items-start gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <span>{errorMessage}</span>
          </div>
        )}
        
        <form method="POST" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              value={emailValue}
              class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent outline-none transition-all"
              placeholder="admin@g-labs.com"
            />
          </div>
          
          <div>
            <label for="password" class="block text-sm font-medium text-slate-700 mb-2">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent outline-none transition-all"
              placeholder="Enter your password"
            />
          </div>
          
          <button
            type="submit"
            class="w-full btn-primary text-center"
          >
            Sign In
          </button>
        </form>
        
        <div class="mt-6 pt-6 border-t border-slate-200">
          <p class="text-sm text-slate-600 text-center">
            <strong>Default Credentials:</strong><br>
            Email: admin@g-labs.com<br>
            Password: admin
          </p>
        </div>
        
        <div class="mt-4 text-center">
          <a href="/" class="text-sm text-cyan-600 hover:text-cyan-700">
            ‚Üê Back to Home
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

