---
// Admin dashboard - main overview page
import BaseLayout from '../../layouts/BaseLayout.astro';
import { requireAuth } from '../../lib/auth';
import { prisma } from '../../lib/db';

// Protect this route - require authentication
try {
  requireAuth(Astro.cookies);
} catch {
  return Astro.redirect('/admin/auth');
}

// Get statistics
const notesCount = await prisma.note.count();
const experimentsCount = await prisma.experiment.count();
const projectsCount = await prisma.project.count();

const publishedNotes = await prisma.note.count({ where: { published: true } });
const publishedExperiments = await prisma.experiment.count({ where: { published: true } });
const publishedProjects = await prisma.project.count({ where: { published: true } });


---

<BaseLayout title="Admin Dashboard" description="Content management dashboard">
  <div class="min-h-screen bg-slate-50">
    <!-- Admin Header -->
    <header class="bg-white border-b border-slate-200 sticky top-0 z-10">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-slate-800">Admin Dashboard</h1>
            <p class="text-sm text-slate-600">Content Management System</p>
          </div>
          <div class="flex items-center gap-4">
            <a href="/" class="text-sm text-slate-600 hover:text-slate-800" target="_blank">
              View Site →
            </a>
            <form method="POST" action="/api/auth/logout">
              <button type="submit" class="text-sm text-red-600 hover:text-red-700 font-medium">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
      <!-- Stats Grid -->
      <div class="grid md:grid-cols-3 gap-6 mb-8">
        <!-- Notes Card -->
        <div class="card p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-cyan-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <a href="/admin/notes" class="text-cyan-600 hover:text-cyan-700 text-sm font-medium">
              Manage →
            </a>
          </div>
          <h3 class="text-2xl font-bold text-slate-800 mb-1">{notesCount}</h3>
          <p class="text-slate-600 text-sm">Total Notes</p>
          <p class="text-xs text-slate-500 mt-2">{publishedNotes} published</p>
        </div>

        <!-- Experiments Card -->
        <div class="card p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
              </svg>
            </div>
            <a href="/admin/experiments" class="text-purple-600 hover:text-purple-700 text-sm font-medium">
              Manage →
            </a>
          </div>
          <h3 class="text-2xl font-bold text-slate-800 mb-1">{experimentsCount}</h3>
          <p class="text-slate-600 text-sm">Total Experiments</p>
          <p class="text-xs text-slate-500 mt-2">{publishedExperiments} published</p>
        </div>

        <!-- Projects Card -->
        <div class="card p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
              </svg>
            </div>
            <a href="/admin/projects" class="text-green-600 hover:text-green-700 text-sm font-medium">
              Manage →
            </a>
          </div>
          <h3 class="text-2xl font-bold text-slate-800 mb-1">{projectsCount}</h3>
          <p class="text-slate-600 text-sm">Total Projects</p>
          <p class="text-xs text-slate-500 mt-2">{publishedProjects} published</p>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card p-6">
        <h2 class="text-xl font-bold text-slate-800 mb-4">Quick Actions</h2>
        <div class="grid md:grid-cols-3 gap-4">
          <a href="/admin/notes/new" class="btn-primary text-center">
            + New Note
          </a>
          <a href="/admin/experiments/new" class="btn-primary text-center">
            + New Experiment
          </a>
          <a href="/admin/projects/new" class="btn-primary text-center">
            + New Project
          </a>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>

