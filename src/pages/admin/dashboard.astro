---
// Simple dashboard with token authentication
import BaseLayout from '../../layouts/BaseLayout.astro';
import { prisma } from '../../lib/db';
import { validateToken } from '../../lib/tokens';

// Get token from URL
const urlParams = new URL(Astro.url).searchParams;
const token = urlParams.get('token');

let isAuthenticated = false;
let stats = {
  notesCount: 0,
  experimentsCount: 0,
  projectsCount: 0,
  publishedNotes: 0,
  publishedExperiments: 0,
  publishedProjects: 0
};

// Validate token using persistent storage
if (token) {
  const tokenData = validateToken(token);
  if (tokenData) {
    isAuthenticated = true;
    
    // Get statistics
    stats.notesCount = await prisma.note.count();
    stats.experimentsCount = await prisma.experiment.count();
    stats.projectsCount = await prisma.project.count();
    stats.publishedNotes = await prisma.note.count({ where: { published: true } });
    stats.publishedExperiments = await prisma.experiment.count({ where: { published: true } });
    stats.publishedProjects = await prisma.project.count({ where: { published: true } });
  }
}

// If not authenticated, redirect to login
if (!isAuthenticated) {
  return Astro.redirect('/admin/auth');
}
