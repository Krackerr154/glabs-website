---
// Admin - List all experiments
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { requireAuth } from '../../../lib/auth';
import { prisma } from '../../../lib/db';
import { formatDate } from '../../../lib/utils';

try {
  requireAuth(Astro.cookies);
} catch {
  return Astro.redirect('/admin/login');
}

const experiments = await prisma.experiment.findMany({
  orderBy: { createdAt: 'desc' },
});


---

<BaseLayout title="Manage Experiments" description="Admin experiments management">
  <div class="min-h-screen bg-slate-50">
    <header class="bg-white border-b border-slate-200">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div>
            <a href="/admin" class="text-sm text-cyan-600 hover:text-cyan-700 mb-2 inline-block">
              ‚Üê Back to Dashboard
            </a>
            <h1 class="text-2xl font-bold text-slate-800">Manage Experiments</h1>
          </div>
          <a href="/admin/experiments/new" class="btn-primary">
            + New Experiment
          </a>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      {experiments.length === 0 ? (
        <div class="card p-12 text-center">
          <p class="text-slate-600 mb-4">No experiments yet</p>
          <a href="/admin/experiments/new" class="btn-primary inline-block">
            Create Your First Experiment
          </a>
        </div>
      ) : (
        <div class="card overflow-hidden">
          <table class="w-full">
            <thead class="bg-slate-50 border-b border-slate-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">Title</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">Updated</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-slate-700 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
              {experiments.map((exp) => (
                <tr class="hover:bg-slate-50 transition-colors">
                  <td class="px-6 py-4">
                    <div class="font-medium text-slate-800">{exp.title}</div>
                    <div class="text-sm text-slate-500">/research/{exp.slug}</div>
                  </td>
                  <td class="px-6 py-4">
                    {exp.published ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Published
                      </span>
                    ) : (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        Draft
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-600">{formatDate(exp.updatedAt)}</td>
                  <td class="px-6 py-4 text-right text-sm font-medium space-x-3">
                    <a href={`/admin/experiments/edit/${exp.id}`} class="text-cyan-600 hover:text-cyan-700">Edit</a>
                    <button
                      onclick={`if(confirm('Delete this experiment?')) window.location.href='/api/experiments/${exp.id}/delete'`}
                      class="text-red-600 hover:text-red-700"
                    >
                      Delete
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </main>
  </div>
</BaseLayout>

