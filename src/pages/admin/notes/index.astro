---
// Admin - List all notes
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { requireAuth } from '../../../lib/auth';
import { prisma } from '../../../lib/db';
import { formatDate } from '../../../lib/utils';

// Protect this route
try {
  requireAuth(Astro.cookies);
} catch {
  return Astro.redirect('/admin/login');
}

// Get all notes
const notes = await prisma.note.findMany({
  orderBy: { createdAt: 'desc' },
});


---

<BaseLayout title="Manage Notes" description="Admin notes management">
  <div class="min-h-screen bg-slate-50">
    <!-- Admin Header -->
    <header class="bg-white border-b border-slate-200">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div>
            <a href="/admin" class="text-sm text-cyan-600 hover:text-cyan-700 mb-2 inline-block">
              ‚Üê Back to Dashboard
            </a>
            <h1 class="text-2xl font-bold text-slate-800">Manage Notes</h1>
          </div>
          <a href="/admin/notes/new" class="btn-primary">
            + New Note
          </a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
      {notes.length === 0 ? (
        <div class="card p-12 text-center">
          <p class="text-slate-600 mb-4">No notes yet</p>
          <a href="/admin/notes/new" class="btn-primary inline-block">
            Create Your First Note
          </a>
        </div>
      ) : (
        <div class="card overflow-hidden">
          <table class="w-full">
            <thead class="bg-slate-50 border-b border-slate-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                  Title
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                  Tags
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                  Updated
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-slate-700 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
              {notes.map((note) => {
                const tags = JSON.parse(note.tags || '[]');
                return (
                  <tr class="hover:bg-slate-50 transition-colors">
                    <td class="px-6 py-4">
                      <div class="font-medium text-slate-800">{note.title}</div>
                      <div class="text-sm text-slate-500">/notes/{note.slug}</div>
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex flex-wrap gap-1">
                        {tags.slice(0, 3).map((tag: string) => (
                          <span class="text-xs bg-slate-100 text-slate-700 px-2 py-1 rounded">
                            {tag}
                          </span>
                        ))}
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      {note.published ? (
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Published
                        </span>
                      ) : (
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Draft
                        </span>
                      )}
                    </td>
                    <td class="px-6 py-4 text-sm text-slate-600">
                      {formatDate(note.updatedAt)}
                    </td>
                    <td class="px-6 py-4 text-right text-sm font-medium space-x-3">
                      <a href={`/admin/notes/edit/${note.id}`} class="text-cyan-600 hover:text-cyan-700">
                        Edit
                      </a>
                      <button
                        onclick={`if(confirm('Delete this note?')) window.location.href='/api/notes/${note.id}/delete'`}
                        class="text-red-600 hover:text-red-700"
                      >
                        Delete
                      </button>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      )}
    </main>
  </div>
</BaseLayout>

