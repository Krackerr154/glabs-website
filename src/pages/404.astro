---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <div class="section-padding min-h-[60vh] flex items-center justify-center">
    <div class="container mx-auto text-center">
      <h1 class="text-8xl md:text-9xl font-bold text-slate-200 mb-4">404</h1>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-6">
        Page Not Found
      </h2>
      <p class="text-lg text-slate-600 mb-12 max-w-2xl mx-auto">
        Sorry, the page you're looking for doesn't exist or has been moved.
        Let's get you back on track.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary">
          Go Home
        </a>
        <a href="/projects" class="btn-secondary">
          View Projects
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
