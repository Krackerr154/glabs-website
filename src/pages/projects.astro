---
import BaseLayout from '../layouts/BaseLayout.astro';
import { prisma } from '../lib/db';
import { safeJsonParse, formatDate } from '../lib/utils';

// Fetch published projects from database
const allProjects = await prisma.project.findMany({
  where: { published: true },
  orderBy: { createdAt: 'desc' },
});

const projects = allProjects.map(project => ({
  ...project,
  techStack: safeJsonParse(project.techStack, []),
}));

// Group projects by featured status
const featuredProjects = projects.filter(project => project.featured);
const otherProjects = projects.filter(project => !project.featured);


---

<BaseLayout 
  title="Projects"
  description="Explore my portfolio of development projects, research work, and technical explorations"
>
  <div class="section-padding">
    <div class="container mx-auto">
      <!-- Page Header -->
      <header class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-800 mb-6">
          Projects
        </h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          A collection of my work spanning web development, research projects, 
          and technical explorations. Each project represents a journey of learning and innovation.
        </p>
      </header>

      <!-- Featured Projects -->
      {featuredProjects.length > 0 && (
        <section class="mb-16">
          <h2 class="text-2xl font-bold text-slate-800 mb-8 flex items-center">
            <svg class="w-6 h-6 text-cyan-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            Featured Projects
          </h2>
          <div class="grid lg:grid-cols-2 gap-8 mb-8">
            {featuredProjects.map((project) => (
              <article class="card p-8 hover:scale-105 transition-all duration-300">
                <div class="flex items-center justify-between mb-4">
                  <span class="bg-cyan-100 text-cyan-700 text-xs font-medium px-3 py-1 rounded-full">
                    Featured
                  </span>
                  <time 
                    class="text-sm text-slate-500"
                    datetime={project.createdAt.toISOString()}
                  >
                    {project.createdAt.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long'
                    })}
                  </time>
                </div>
                
                <h3 class="text-2xl font-bold text-slate-800 mb-4">
                  <a href={`/projects/${project.slug}`} class="hover:text-cyan-600 transition-colors">
                    {project.title}
                  </a>
                </h3>
                
                <p class="text-slate-600 mb-6 leading-relaxed">
                  {project.description}
                </p>
                
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.techStack.map((tech) => (
                    <span class="text-xs bg-slate-100 text-slate-700 px-3 py-1 rounded-md font-medium">
                      {tech}
                    </span>
                  ))}
                </div>
                
                <div class="flex items-center justify-between">
                  <a 
                    href={`/projects/${project.slug}`}
                    class="text-cyan-600 hover:text-cyan-700 font-semibold text-sm flex items-center"
                  >
                    View Project
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                  
                  <div class="flex space-x-3">
                    {project.githubUrl && (
                      <a 
                        href={project.githubUrl}
                        class="text-slate-500 hover:text-slate-700 transition-colors"
                        aria-label={`View ${project.title} on GitHub`}
                      >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                        </svg>
                      </a>
                    )}
                    {project.liveUrl && (
                      <a 
                        href={project.liveUrl}
                        class="text-slate-500 hover:text-slate-700 transition-colors"
                        aria-label={`View live demo of ${project.title}`}
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- All Projects -->
      <section>
        <h2 class="text-2xl font-bold text-slate-800 mb-8">
          {featuredProjects.length > 0 ? 'All Projects' : 'My Projects'}
        </h2>
        
        {otherProjects.length > 0 || featuredProjects.length === 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {(featuredProjects.length === 0 ? projects : otherProjects).map((project) => (
              <article class="card p-6 hover:scale-105 transition-transform duration-200">
                <div class="flex items-center justify-between mb-3">
                  <div class="flex flex-wrap gap-1">
                    {project.techStack.slice(0, 2).map((tag) => (
                      <span class="text-xs text-slate-500">#{tag}</span>
                    ))}
                  </div>
                  <time 
                    class="text-xs text-slate-500"
                    datetime={project.createdAt.toISOString()}
                  >
                    {project.createdAt.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short'
                    })}
                  </time>
                </div>
                
                <h3 class="text-xl font-semibold text-slate-800 mb-3">
                  <a href={`/projects/${project.slug}`} class="hover:text-cyan-600 transition-colors">
                    {project.title}
                  </a>
                </h3>
                
                <p class="text-slate-600 mb-4 line-clamp-3 text-sm">
                  {project.description}
                </p>
                
                <div class="flex flex-wrap gap-1 mb-4">
                  {project.techStack.slice(0, 3).map((tech) => (
                    <span class="text-xs bg-slate-100 text-slate-700 px-2 py-1 rounded-md">
                      {tech}
                    </span>
                  ))}
                  {project.techStack.length > 3 && (
                    <span class="text-xs text-slate-500">+{project.techStack.length - 3} more</span>
                  )}
                </div>
                
                <div class="flex items-center justify-between">
                  <a 
                    href={`/projects/${project.slug}`}
                    class="text-cyan-600 hover:text-cyan-700 font-medium text-sm"
                  >
                    Learn More â†’
                  </a>
                  
                  <div class="flex space-x-2">
                    {project.githubUrl && (
                      <a 
                        href={project.githubUrl}
                        class="text-slate-400 hover:text-slate-600 transition-colors"
                        aria-label="GitHub"
                      >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                        </svg>
                      </a>
                    )}
                    {project.liveUrl && (
                      <a 
                        href={project.liveUrl}
                        class="text-slate-400 hover:text-slate-600 transition-colors"
                        aria-label="Live Demo"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-slate-600">More projects coming soon.</p>
          </div>
        )}
      </section>

      <!-- No projects state -->
      {projects.length === 0 && (
        <div class="text-center py-16">
          <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <h3 class="text-xl font-semibold text-slate-800 mb-2">No Projects Yet</h3>
          <p class="text-slate-600 mb-6">Projects will appear here as they are completed.</p>
          <a href="/contact" class="btn-primary">
            Get In Touch
          </a>
        </div>
      )}
    </div>
  </div>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>


